<div class="order card">
  <h2 class="order-title">Orden #<%= order.id %></h2>
  <p class="order-total">Total: <%= number_to_currency(order.total_price) %></p>
  <ul class="order-products">
    <% order.order_items.each do |item| %>
      <li class="order-product"><%= item.product.name %> - <%= number_to_currency(item.product.price) %></li>
    <% end %>
  </ul>
  <%= button_to 'Eliminar orden', order_path(order.id), method: :delete, class: "btn danger-btn" %>
</div>